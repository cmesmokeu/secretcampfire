<% include ../partials/session_datastore.ejs %>
<% include ../partials/set_blog_widget.ejs %>

<script>
  setInterval(function() {
    g_sessionDatastore.getData("blog_url", function(url) {
      if (!url)
        return;

      $("#active-blog-url").show();
      $("#active-blog-url").html("Viewing as <b>"
        + url + "</b>"
        + " <span id='deactivate-blog' style='cursor: pointer'>[x]</span>"
      );
      $("#deactivate-blog").click(function() {
        g_sessionDatastore.setData("blog_url", null);
        $("#active-blog-url").html("").hide();
      });
    });
  }, 2000);
</script>
